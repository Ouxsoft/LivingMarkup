{
  "name": "hxtree/livingmarkup",
  "description": "LivingMarkup is a LHTML5 processor.",
  "keywords": [
    "livingMarkup",
    "template",
    "xml",
    "php",
    "processor",
    "dom",
    "engine",
    "lhtml5",
    "lhtml",
    "html5",
    "html",
    "markup"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "hxtree",
      "homepage": "https://github.com/hxtree",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-gd": "*",
    "laminas/laminas-config": "^3.3.0",
    "laminas/laminas-validator": "^2.13.2",
    "laminas/laminas-router": "^3.3@dev",
    "laminas/laminas-http": "^2.11@dev",
    "twbs/bootstrap": "dev-master",
    "components/jquery": "dev-master"
  },
  "minimum-stability": "dev",
  "support": {
    "issues": "https://github.com/hxtree/LivingMarkup/issues"
  },
  "autoload": {
    "files" : [
      "src/Autoloader.php"
    ],
    "psr-4": {
      "LivingMarkup\\": "src/",
      "LivingMarkup\\Modules\\Core\\": "modules/core/",
      "LivingMarkup\\Modules\\Custom\\": "modules/custom/"
    }
  },
  "autoload-dev": {
    "files" : ["src/Autoloader.php"],
    "psr-4": {
      "LivingMarkup\\": "src/",
      "LivingMarkup\\Modules\\Core\\": "modules/core",
      "LivingMarkup\\Modules\\Custom\\": "modules/custom"
    }
  },
  "homepage": "https://github.com/hxtree/LivingMarkup",
  "require-dev": {
    "phpunit/phpunit": "^8",
    "friendsofphp/php-cs-fixer": "^2.17@dev"
  },
  "scripts": {
    "build": [
      "php-cs-fixer fix --rules=@PSR2 --using-cache=no modules/",
      "php-cs-fixer fix --rules=@PSR2 --using-cache=no src/",
      "php-cs-fixer fix --rules=@PSR2 --using-cache=no test/",
      "rm -rf public/assets/css/bootstrap",
      "cp -R vendor/twbs/bootstrap/dist/css/ public/assets/css/bootstrap",
      "rm -rf public/assets/js/bootstrap",
      "cp -R vendor/twbs/bootstrap/dist/js/ public/assets/js/bootstrap",
      "rm -rf public/assets/js/jquery/*",
      "cp vendor/components/jquery/jquery.min.js public/assets/js/jquery/jquery.min.js"
    ],
    "test": [
      "phpunit --colors=always"
    ],
    "serve": "php -S 0.0.0.0:8080 -t public/",
    "fix-cs": "php vendor/bin/php-cs-fixer fix --rules=@PSR2 src/"
  }
}
