{
  "name": "ouxsoft/livingmarkup",
  "description": "A LHTML implementation written in PHP.",
  "keywords": [
    "LivingMarkup",
    "templating engine",
    "xml",
    "processor",
    "dom",
    "engine",
    "lhtml",
    "html5",
    "html",
    "markup"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ouxsoft",
      "homepage": "https://github.com/ouxsoft",
      "role": "Organization"
    },
    {
      "name": "Matthew Heroux",
      "homepage": "https://github.com/hxtree",
      "role": "Senior Full-Stack Developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "laminas/laminas-config": "^3.3.0",
    "laminas/laminas-validator": "^2.13.2",
    "laminas/laminas-router": "^3.3@dev",
    "laminas/laminas-http": "^2.11@dev"
  },
  "minimum-stability": "dev",
  "support": {
    "issues": "https://github.com/ouxsoft/LivingMarkup/issues"
  },
  "autoload": {
    "psr-4": {
      "LivingMarkup\\": "src/LivingMarkup/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LivingMarkup\\": "src/LivingMarkup/",
      "LivingMarkup\\Test\\": "test/src/Resources/Modules/"
    }
  },
  "homepage": "https://github.com/ouxsoft/LivingMarkup",
  "require-dev": {
    "phpunit/phpunit": "^8",
    "friendsofphp/php-cs-fixer": "^2.17@dev"
  },
  "scripts": {
    "build": [
      "php-cs-fixer fix --rules=@PSR2 --using-cache=no src/",
      "php-cs-fixer fix --rules=@PSR2 --using-cache=no test/"
    ],
    "test": [
      "phpunit --colors=always"
    ],
    "rm-cache" : [
      "find var/cache/images/ -type f -not -name '.gitignore' -delete"
    ],
    "fix-code": [
      "php-cs-fixer fix --rules=@PSR2 --using-cache=no src/",
      "php-cs-fixer fix --rules=@PSR2 --using-cache=no test/"
    ]
  }
}