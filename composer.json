{
	"name" : "hxtree/pxp",
	"description" : "PXP turns markup into code",
	"keywords" : [
		"pxp",
		"xml",
		"php",
		"preprocessor",
		"template",
		"engine",
		"markup"
	],
	"type" : "library",
	"license" : "MIT",
	"authors" : [{
			"name" : "hxtree",
			"homepage" : "https://github.com/hxtree",
			"role" : "Developer"
		}
	],
	"require" : {
		"php" : ">=7.1",
		"phpdocumentor/reflection": " ~4.0"
	},
	"minimum-stability" : "dev",
	"support" : {
		"issues" : "https://github.com/hxtree/pxp/issues"
	},
	"autoload" : {
		"psr-4" : {
			"Pxp\\" : "src/"
		}
	},
	"homepage" : "https://github.com/hxtree/Pxp",
	"require-dev": {
		"phpdocumentor/phpdocumentor": "dev-master",
		"phpunit/phpunit": "^8"
	},
	"scripts": {
		"test": [
			"phpunit --bootstrap vendor/autoload.php tests/DirectorTest"
		]
	}
}